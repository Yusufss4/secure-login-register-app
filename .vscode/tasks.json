{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build Using Make",
			"type": "shell",
			"options": {
				"cwd": "${workspaceFolder}/src"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"windows": {
				"command": "mingw32-make.exe",
				"detail": "compiler: C:\\msys64\\mingw64\\bin\\gcc.exe"
			},
			"linux": {
				"command": "make",
				"detail": "compiler: gcc"
			}
		}
	]
}